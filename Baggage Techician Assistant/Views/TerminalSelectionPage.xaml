<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Baggage_Technician_Assistant.Views.TerminalSelectionPage"
             Title="TerminalSelectionPage">
    <Grid RowDefinitions="*,*,*" RowSpacing="2">
        <Button Text="A"
                Command="{Binding ShowDetailsCommand}"
                CommandParameter="A"/>
        <Button Text="B" Grid.Row="1" 
                BackgroundColor="{StaticResource SecondaryColor}"
                Command="{Binding ShowDetailsCommand}"
                CommandParameter="B"/>
        <Button Text="C" Grid.Row="2"
                Command="{Binding ShowDetailsCommand}"
                CommandParameter="C"/>
    </Grid>
</ContentPage>